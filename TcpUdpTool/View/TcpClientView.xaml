<UserControl
    x:Class="TcpUdpTool.View.TcpClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcpUdpTool.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Margin="10" Header="连接">

            <Grid Margin="10,10,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="0"
                    Content="IP 地址：" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Height="21"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Validation.ErrorTemplate="{x:Null}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,10,10,10"
                    Padding="0"
                    Content="端口：" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="21"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Static system:String.Empty}}"
                    Validation.ErrorTemplate="{x:Null}" />

                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="80"
                    Height="21"
                    Margin="10,10,0,10"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Command="{Binding ConnectDisconnectCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="连接" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Content" Value="断开" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsConnecting}" Value="True">
                                    <Setter Property="Content" Value="..." />
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </GroupBox>

        <local:HistoryView
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,0,10,10"
            DataContext="{Binding History}" />

        <GroupBox
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,0,10,10"
            Padding="0,0,0,10"
            Header="发送">

            <Grid Margin="10,10,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Padding="0"
                    VerticalAlignment="Center">

                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Text" Value="消息：" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Send.FileSelected}" Value="true">
                                    <Setter Property="Text" Value="文件：" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <RichTextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    MinHeight="50"
                    MaxHeight="50"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    AcceptsReturn="True"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Binding Send.Message, UpdateSourceTrigger=PropertyChanged}" />
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Width="80"
                    Height="21"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    Command="{Binding Send.BrowseCommand}"
                    Content="选择文件">

                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Send.FileSelected}" Value="true">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="21"
                    Margin="0,10,10,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    Content="类型：" />

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10,10,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <RadioButton
                        Margin="0,0,10,0"
                        Command="{Binding Send.TypeChangedCommand}"
                        Content="文本"
                        IsChecked="{Binding Send.PlainTextSelected, Mode=TwoWay}" />

                    <RadioButton
                        Margin="0,0,10,0"
                        Command="{Binding Send.TypeChangedCommand}"
                        Content="十六进制"
                        IsChecked="{Binding Send.HexSelected, Mode=TwoWay}" />

                    <RadioButton
                        Margin="0,0,10,0"
                        Command="{Binding Send.TypeChangedCommand}"
                        Content="文件"
                        IsChecked="{Binding Send.FileSelected, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <CheckBox
                        Margin="0,0,10,0"
                        Content="自动发送"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding IsConnected}"
                        IsChecked="{Binding AutoSendEnabled, Mode=TwoWay}" />
                    <TextBox
                        Width="80"
                        VerticalContentAlignment="Center"
                        Text="{Binding AutoSendIntervalMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Static system:String.Empty}}"
                        Validation.ErrorTemplate="{x:Null}"
                        PreviewTextInput="AutoSendInterval_PreviewTextInput"
                        DataObject.Pasting="AutoSendInterval_Pasting" />
                    <TextBlock
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Text="ms" />
                    <Button
                        Width="80"
                        Height="21"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        Command="{Binding Send.SendCommand}"
                        Content="发送"
                        IsEnabled="{Binding IsConnected}" />
                </StackPanel>

            </Grid>

        </GroupBox>

    </Grid>

</UserControl>
